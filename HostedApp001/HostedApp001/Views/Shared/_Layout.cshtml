    @*@Scripts.Render("~/Scripts/vendor/ng-cordova.js");*@

    @{
        var os = "unknownS";
        bool isDevice = false;
        if (Request.UserAgent.ToLower().Contains("android"))
        {
            os = "android";
            isDevice = true;
        }
        if (Request.UserAgent.ToLower().Contains("windows"))
        {
            os = "windows";
            //isDevice = true;
        }
        if (Request.UserAgent.ToLower().Contains("ios") || Request.UserAgent.ToLower().Contains("iphone") || Request.UserAgent.ToLower().Contains("ipad"))
        {
            os = "ios";
            isDevice = true;
        }
        if (isDevice)
        {
            @Scripts.Render("~/cordovadist/" + os + "/cordova.js");
        }
    }

    @RenderSection("scripts", required: false)

